<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/bt_tsnackbar_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="显示顶部snackbar（错误）"
        app:layout_constraintBottom_toTopOf="@+id/bt_tsnackbar_two"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/show_snack_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="显示源版SnackBar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bt_tsnackbar_three" />

    <Button
        android:id="@+id/bt_tsnackbar_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="显示顶部snackbar（警告）"
        app:layout_constraintBottom_toTopOf="@+id/bt_tsnackbar_three"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bt_tsnackbar_one" />

    <Button
        android:id="@+id/bt_tsnackbar_three"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="显示顶部snackbar（完成）"
        app:layout_constraintBottom_toTopOf="@+id/show_snack_bar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bt_tsnackbar_two" />

</androidx.constraintlayout.widget.ConstraintLayout>